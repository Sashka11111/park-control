<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="670.0" prefWidth="918.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parkcontrol.presentation.controller.BookingController">
<children>
    <Label layoutX="20" layoutY="20" text="Бронювання паркувальних місць" />

    <TableView fx:id="parkingSpotTable" layoutX="20" layoutY="60" prefHeight="200" prefWidth="400">
      <columns>
        <TableColumn fx:id="spotIdColumn" prefWidth="50" text="ID" />
        <TableColumn fx:id="spotNameColumn" prefWidth="150" text="Назва місця" />
        <TableColumn fx:id="spotStatusColumn" prefWidth="200" text="Статус" />
      </columns>
    </TableView>

    <Label layoutX="20" layoutY="280" text="Час початку:" />
    <DatePicker fx:id="startTimePicker" layoutX="100" layoutY="280" />

    <Label layoutX="20" layoutY="320" text="Час закінчення:" />
    <DatePicker fx:id="endTimePicker" layoutX="100" layoutY="320" />

    <Button fx:id="bookButton" layoutX="20" layoutY="360" text="Забронювати" />

    <Separator layoutX="20" layoutY="400" />

    <Label layoutX="20" layoutY="440" text="Активні бронювання" />
    <ListView fx:id="reservationListView" layoutX="20" layoutY="470" prefHeight="100" prefWidth="250" />

    <Button fx:id="cancelButton" layoutX="20" layoutY="590" text="Відмінити" />

    <Separator layoutX="490.0" layoutY="248.0" />

    <Label layoutX="490.0" layoutY="268.0" text="Оплата парковки" />
    <Label layoutX="490.0" layoutY="298.0" text="Сума платежу:" />
    <TextField fx:id="paymentAmountField" layoutX="570.0" layoutY="298.0" />

    <Button fx:id="payButton" layoutX="490.0" layoutY="338.0" text="Провести платіж" />
  </children>
</AnchorPane>
